<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/create_tiles_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_tiles_name_label" />

        <EditText
            android:id="@+id/create_tiles_name_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/create_tiles_url_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_tiles_url_label" />

        <EditText
            android:id="@+id/create_tiles_url_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri" />
    </LinearLayout>

    <Button
        android:id="@+id/create_tiles_preloaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_tiles_preloaded_label" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/create_tiles_zoom_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_tiles_zoom_label" />

        <TextView
            android:id="@+id/create_tiles_min_zoom_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/create_tiles_min_zoom_label" />

        <EditText
            android:id="@+id/create_tiles_min_zoom_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:id="@+id/create_tiles_max_zoom_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/create_tiles_max_zoom_label" />

        <EditText
            android:id="@+id/create_tiles_max_zoom_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/create_tiles_latitude_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_tiles_latitude_label" />

        <TextView
            android:id="@+id/create_tiles_min_latitude_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/create_tiles_min_latitude_label" />

        <EditText
            android:id="@+id/create_tiles_min_latitude_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="@string/create_tiles_default_min_latitude" />

        <TextView
            android:id="@+id/create_tiles_max_latitude_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/create_tiles_max_latitude_label" />

        <EditText
            android:id="@+id/create_tiles_max_latitude_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="@string/create_tiles_default_max_latitude" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/create_tiles_longitude_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_tiles_longitude_label" />

        <TextView
            android:id="@+id/create_tiles_min_longitude_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/create_tiles_min_longitude_label" />

        <EditText
            android:id="@+id/create_tiles_min_longitude_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="@string/create_tiles_default_min_longitude" />

        <TextView
            android:id="@+id/create_tiles_max_longitude_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/create_tiles_max_longitude_label" />

        <EditText
            android:id="@+id/create_tiles_max_longitude_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="@string/create_tiles_default_max_longitude" />
    </LinearLayout>

</LinearLayout>