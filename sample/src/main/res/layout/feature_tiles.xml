<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/feature_tiles_index_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/feature_tiles_index_warning"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/feature_tiles_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature_tiles_name_label" />

            <EditText
                android:id="@+id/feature_tiles_name_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </LinearLayout>

        <include
            android:id="@+id/feature_tiles_load"
            layout="@layout/generate_tiles" />

        <TextView
            android:id="@+id/feature_tiles_point_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/feature_tiles_point_label" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/feature_tiles_point_color_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/feature_tiles_point_color_label" />

            <Spinner
                android:id="@+id/feature_tiles_point_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/feature_tiles_colors"
                android:prompt="@string/feature_tiles_point_color_label" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/feature_tiles_point_alpha_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/feature_tiles_point_alpha_label" />

            <EditText
                android:id="@+id/feature_tiles_point_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <TextView
                android:id="@+id/feature_tiles_point_radius_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/feature_tiles_point_radius_label" />

            <EditText
                android:id="@+id/feature_tiles_point_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <TextView
            android:id="@+id/feature_tiles_line_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/feature_tiles_line_label" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/feature_tiles_line_color_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/feature_tiles_line_color_label" />

            <Spinner
                android:id="@+id/feature_tiles_line_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/feature_tiles_colors"
                android:prompt="@string/feature_tiles_line_color_label" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/feature_tiles_line_alpha_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/feature_tiles_line_alpha_label" />

            <EditText
                android:id="@+id/feature_tiles_line_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <TextView
                android:id="@+id/feature_tiles_line_stroke_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/feature_tiles_line_stroke_label" />

            <EditText
                android:id="@+id/feature_tiles_line_stroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <TextView
            android:id="@+id/feature_tiles_polygon_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/feature_tiles_polygon_label" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/feature_tiles_polygon_color_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/feature_tiles_polygon_color_label" />

            <Spinner
                android:id="@+id/feature_tiles_polygon_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/feature_tiles_colors"
                android:prompt="@string/feature_tiles_polygon_color_label" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/feature_tiles_polygon_alpha_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/feature_tiles_polygon_alpha_label" />

            <EditText
                android:id="@+id/feature_tiles_polygon_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <TextView
                android:id="@+id/feature_tiles_polygon_stroke_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/feature_tiles_polygon_stroke_label" />

            <EditText
                android:id="@+id/feature_tiles_polygon_stroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/feature_tiles_polygon_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="@string/feature_tiles_polygon_fill_label" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/feature_tiles_polygon_fill_color_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/feature_tiles_polygon_fill_color_label" />

            <Spinner
                android:id="@+id/feature_tiles_polygon_fill_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/feature_tiles_colors"
                android:prompt="@string/feature_tiles_polygon_fill_color_label" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/feature_tiles_polygon_fill_alpha_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="@string/feature_tiles_polygon_fill_alpha_label" />

            <EditText
                android:id="@+id/feature_tiles_polygon_fill_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>