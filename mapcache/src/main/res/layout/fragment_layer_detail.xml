<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mil.nga.mapcache.GeoPackageDetailDrawer"
    android:background="@color/offwhite"
    android:clickable="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Small tab to indicate drag window    -->
            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center"
                android:background="@color/horizontal_line" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <ImageButton
                    android:id="@+id/layerPageBackButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingRight="16dp"
                    android:src="@drawable/arrow_back" />

                <TextView
                    android:id="@+id/layerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/layer_detail_page"
                    android:textAppearance="@style/textAppearanceSubtitle1" />

            </LinearLayout>

            <!-- Icon row: info, rename, share, copy, delete -->
            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <Button
                    android:id="@+id/layer_rename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/material_edit"
                    android:text="Edit" />


                <Button
                    android:id="@+id/layer_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_check_box_black_24dp"
                    android:text="Enable" />

                <Button
                    android:id="@+id/layer_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/material_info"
                    android:text="Details" />

                <Button
                    android:id="@+id/layer_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/material_delete"
                    android:text="Delete" />
            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_marginBottom="16dp" />


            <TextView
                android:id="@+id/text_number_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="8dp"
                android:text="Tiles: "
                android:textAppearance="@style/textAppearanceSubtitle2" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="Description: "
                android:textAppearance="@style/textAppearanceSubtitle2" />











        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>


</FrameLayout>
