<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- logo and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/close_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_clear_grey_800_24dp" />

        <TextView
            android:id="@+id/alert_title"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/alert_logo"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/alert_logo"
            android:text="New GeoPackage" />
    </LinearLayout>

        <!--<View style="@style/Divider"-->
            <!--android:layout_marginBottom="16dp"-->
            <!--/>-->

        <!--Create new-->
        <TextView
            android:id="@+id/wizard_create"
            android:textAppearance="@style/textAppearanceSubtitle2_light_heavy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/ripple"
            android:text="Create New"
            android:textColor="@color/nga_primary_light"/>

        <!--import from url-->
        <TextView
            android:id="@+id/wizard_import"
            android:textAppearance="@style/textAppearanceSubtitle2_light_heavy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/ripple"
            android:text="Import from URL"
            android:textColor="@color/nga_primary_light"/>

        <!--import from file-->
        <TextView
            android:id="@+id/wizard_import_file"
            android:textAppearance="@style/textAppearanceSubtitle2_light_heavy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:paddingBottom="24dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/ripple"
            android:text="Import from file"
            android:textColor="@color/nga_primary_light"/>

    </LinearLayout>





</LinearLayout>