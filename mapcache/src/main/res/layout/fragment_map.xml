                        <!--android:name="mil.nga.mapcache.GeoPackageDetailDrawer"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent" />-->
                    </LinearLayout>


                </LinearLayout>
            </FrameLayout>
        </FrameLayout>


